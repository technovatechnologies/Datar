    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Include jsPDF and html2canvas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <style>
        @@page {
            size: A4;
            margin: 20mm;
        }
        /* Print styles */
        @@media print {
            body {
                background-color: #fff;
            }
        }
        table {
            width: 100%;
            border-collapse: collapse;
            font-family: 'Cambria Math';
        }

        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            vertical-align: middle;
        }


        th {
            text-align: center;
            border: 1px solid black;
            padding: 8px;
            vertical-align: middle;
            word-break: break-word;
            white-space: normal;
            overflow-wrap: break-word;
        }

        .company-title {
            font-size: 20px;
            font-weight: bold;
            letter-spacing: 1px;
            white-space: nowrap;
            word-spacing:  5px;
        }

        .footer-text {
            font-size: 1rem;
            font-weight: bold;
            text-align: left;
            padding: 10px;
        }



        .no-top-border td {
            border-top: hidden !important;
        }

        .no-left-border {
            border-left: hidden !important;
        }

        .top-left {
            vertical-align: top; /* Align text to the top */
            text-align: left; /* Align text to the left */
            padding: 5px; /* Optional: Add some padding */
        }
    </style>
</head>
<body>
    <div class="container mt-4 border rounded p-4 bg-light">
        <!-- Close Button -->
        <a asp-area="MST_Company" id="top-logo" asp-controller="MST_Company" asp-action="CompanyDetail" class="btn btn-link position-absolute top-0 end-0 m-3 text-dark">
            <i class="bi bi-x-lg fs-4"></i>
        </a>
        <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>
        <!-- Page Title -->
        <h1 class="text-black">FMR05</h1>
        <!--Table-->
        <table class="table table-hover border" id="pdf-content">
            <tr>
                <td colspan="4" class="company-title">BLIZZARD CERAMICA LLP</td>
                <td colspan="7" class="company-title">RESOURCE REQUIREMENTS</td>
                <td colspan="4">Form. No. : FMR05 <br />Rev. No. & Date :</td>
            </tr>
            <tr style="height: 5vh;">
                <td colspan="7">
                    <span class="fw-bold">Audit No. & Date :</span>
                    <br /><br /><span class="mt-3">Department :</span>
                    <br /><br /><span class="mt-3">Auditee  :</span>
                    <br /><br /><span class="mt-3">Documents Reference : </span>
                </td>
                <td colspan="8" class="no-left-border top-left">
                    <span class="fw-bold">  N. C. No. :</span>
                    <br /><br /><span class="mt-3">ISO 9001 Cl. No. :</span>
                    <br /><br /><span class="mt-3">Auditor :</span>
                </td>
            </tr>
            <tr>
                <td colspan="15" class="top-left"  >(A) DETAILS OF NON-CONFORMITY  :</td>
                
            </tr>
            <tr>
                <td colspan="15"  style="height:30vh;"></td>
            </tr>
            <tr class="no-top-border">
                <td colspan="7">Sign. of Auditee :</td>
                <td colspan="8" class="no-left-border">Sign. of Auditor :</td>
            </tr>

            <tr>
                <td colspan="15" class="top-left">(B) ROOT CAUSE  :</td>

            </tr>
            <tr>
                <td colspan="15" style="height:30vh;"></td>
            </tr>
            <tr class="no-top-border">
                <td colspan="15">Sign. of Auditee : </td>
            </tr>

            <tr>
                <td colspan="14" class="top-left">(C) PROPOSED CORRECTIVE ACTION  :</td>
                <td class ="no-left-border">Target :</td>
            </tr>
            <tr>
                <td colspan="15" style="height:30vh;"></td>
            </tr>
            <tr class="no-top-border">
                <td colspan="7">Sign. of Auditee : </td>
                <td colspan="8" class="no-left-border">Reviewed By M.R. :</td>
            </tr>

            <tr>
                <td colspan="14" class="top-left">(D) VERIFICATION OF ACTION TAKEN  :</td>
                <td class ="no-left-border">Date:</td>
            </tr>
            <tr>
                <td colspan="15"  style="height:30vh;"></td>
            </tr>
            <tr class="no-top-border">
                <td colspan="7">Sign. of Auditee : </td>
                <td colspan="8" class="no-left-border">Sign. of Auditor : </td>
            </tr>

            <tr>
