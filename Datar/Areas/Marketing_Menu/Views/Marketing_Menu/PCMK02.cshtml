<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quality Objectives 2024</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        @@page {
            size: A4;
            margin: 20mm;
        }
        /* Print styles */
        @@media print {
            body {
                background-color:   #fff;
            }
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-family: 'Cambria Math';
        }



        .doc-title {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
        }

        .footer-text {
            font-size: 1rem;
            font-weight: bold;
            text-align: left;
            padding: 10px;
        }

        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            vertical-align: middle;
        }


        th {
            text-align: center;
            border: 1px solid black;
            padding: 8px;
            vertical-align: middle;
            word-break: break-word;
            white-space: normal;
            overflow-wrap: break-word;
        }

        .company-title {
            font-size: 20px;
            font-weight: bold;
            letter-spacing: 1px;
            white-space: nowrap;
            word-spacing:   5px;
        }

    </style>
</head>
<body>
    <!-- Close Button -->
    <a asp-area="MST_Company" id="top-logo" asp-controller="MST_Company" asp-action="CompanyDetail" class="btn btn-link position-absolute top-0 end-0 m-3 text-dark">
        <i class="bi bi-x-lg fs-4"></i>
    </a>
    <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>
    <div class="container mt-4 border rounded p-4 bg-light">
        <!-- Page Title -->
        <h1 class="text-black">PCMK02</h1>
        <table class="table table-hover border" id="pdf-content">
            <tr>
                <td colspan="3" class="company-title">BLIZZARD CERAMICA LLP</td>
                <td colspan="2" class="company-title">PROCESS CHARTS</td>
            </tr>

            <tr>
                <td colspan="3"><strong>Department :</strong> Marketing, Sales & Dispatch</td>
                <td colspan="2"><strong>Doc. No. :</strong> PC MK 02</td>
            </tr>
            <tr>
                <td colspan="3"><strong>Process :</strong> <span class="highlight">Customer Property</span></td>
                <td colspan="2"><strong>Rev. No. & Date :</strong> </td>
            </tr>
            <tr>
                <td colspan="3"><strong>ISO 9001:2015 Cl. Ref. :</strong> 8.5.3</td>
                <td colspan="2"><strong>Page No. :</strong> 1 of 1</td>
            </tr>
            <tr>
                <th>Sr. No.</th>
                <th>Sequence of Activity / Control Method</th>
                <th>Responsibility</th>
                <th>Document Reference</th>
                <th>Record Reference</th>
            </tr>

            <tr>
                <td>1</td>
                <td>Receipt of customer’s property (Drawing/sample).</td>
                <td>Dispatch Officer</td>
                <td>-</td>
                <td>Stock Register</td>
            </tr>
            <tr>
                <td>2</td>
                <td>To verify supplied quantity as per challan.</td>
                <td>Dispatch Officer</td>
                <td>-</td>
                <td>Challan</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Identify the customer’s property & stored at designated area.</td>
                <td>Dispatch Officer</td>
                <td>Work Instruction</td>
                <td>-</td>
            </tr>
            <tr>
                <td>4</td>
                <td>To issue customer’s property as per requirement for turning job work.</td>
                <td>Dispatch Officer</td>
                <td>-</td>
                <td>FST02</td>
            </tr>
            <tr>
                <td>5</td>
                <td>To verify stage-wise stock of customer’s property at the end of month.</td>
                <td>Dispatch Officer</td>
                <td>-</td>
                <td>Stock Register</td>
            </tr>
            <tr>
                <td>6</td>
                <td>Inform to customer, incase and loss & damage observed in customer’s property.</td>
                <td>Dispatch Officer</td>
                <td>-</td>
                <td>Letter</td>
            </tr>
            <tr>
                <td colspan="5" style="height: 50vh;"></td>
            </tr>
            <tr>
                <td colspan="2">Prepared By MR :</td>
                <td colspan="3">Approved By : PARTNER</td>
            </tr>

        </table>
    </div>
    <script>
                document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("downloadPdf").addEventListener("click", () => {
                const { jsPDF } = window.jspdf;
                const pdf = new jsPDF("p", "mm", "a4");

                // Get elements to hide
                const btn = document.getElementById("downloadPdf");
                const logo = document.getElementById("top-logo");

                // Temporarily hide elements
                if (btn) btn.style.display = "none";
                if (logo) logo.style.display = "none";

                html2canvas(document.getElementById("pdf-content")).then(canvas => {
                    const imgData = canvas.toDataURL("image/png");
                    const imgWidth = 190; // A4 width in mm
                    const imgHeight = (canvas.height * imgWidth) / canvas.width;

                    pdf.addImage(imgData, "PNG", 10, 10, imgWidth, imgHeight);
                    pdf.save("PCMK02.pdf");

                    // Restore elements after PDF is generated
                    if (btn) btn.style.display = "block";
                    if (logo) logo.style.display = "block";
                });
            });
        });

    </script>
    <!-- Include jsPDF and html2canvas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</body>
</html>