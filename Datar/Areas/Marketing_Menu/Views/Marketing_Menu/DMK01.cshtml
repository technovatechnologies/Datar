            <i class="bi bi-x-lg fs-4"></i>
        </a>
        <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>
        <!-- Page Title -->
        <h1 class="text-black">DMK01</h1>
        <!-- Table -->
        <table class="table table-hover border" id="pdf-content">
            <tr>
                <td colspan="2" class="company-title">BLIZZARD CERAMICA LLP</td>
                <td class="company-title">LIST OF PRODUCTS</td>
                <td colspan="2">Doc. No.: D MK 01 <br> Rev. No. & Date:</td>
            </tr>
            <tr>
                <th style="width:10%;">Sr. No.</th>
                <th>Tiles</th>
                <th>Product Description</th>
                <th>Size</th>
                <th>Weight Range</th>
            </tr>
            <tr>
                <td style="width:10%;">1</td>
                <td>TILES</td>
                <td>600 X 600 MM</td>
                <td></td>
