<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quality Objectives 2024</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <!-- Include jsPDF and html2canvas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <style>
        @@page {
            size: A4;
            margin: 20mm;
        }
        /* Print styles */
        @@media print {
            body {
                background-color: #fff;
            }
        }
        body {
            font-family: ,'Cambria Math';
        }

        .table-container {
            width: 100%;
            border-collapse: collapse;
        }

        .table-container, th, td {
            border: 1px solid black;
        }

        td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            vertical-align: middle;
        }


        th {
            text-align: center;
            border: 1px solid black;
            padding: 8px;
            vertical-align: middle;
            word-break: break-word;
            white-space: normal;
            overflow-wrap: break-word;
        }

        .company-title {
            font-size: 20px;
            font-weight: bold;
            letter-spacing: 1px;
            white-space: nowrap;
            word-spacing:  5px;
        }


        .sub-header {
            font-weight: bold;
        }

        .process-header {
            text-align: center;
            font-size: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container mt-4 border rounded p-4 bg-light">

    <!-- Close Button -->
    <a asp-area="MST_Company" id="top-logo" asp-controller="MST_Company" asp-action="CompanyDetail" class="btn btn-link position-absolute top-0 end-0 m-3 text-dark">
        <i class="bi bi-x-lg fs-4"></i>
    </a>
    <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>

    <table class="table table-hover border" id="pdf-content">
        <tr>
            <td colspan="3" class="company-title">BLIZZARD CERAMICA LLP</td>
            <td colspan="3" class="company-title">PROCESS CHARTS</td>
        </tr>
        <tr>
            <td colspan="3" class="sub-header">Department : Store</td>
            <td colspan="3">Doc. No.: PC ST 01</td>
        </tr>
        <tr>
            <td colspan="3"><b>Process : Store</b></td>
            <td colspan="3">Rev. No. & Date : 01/01.08.2024</td>
        </tr>
        <tr>
            <td colspan="3">ISO 9001-2015 Cl. Ref.: 8.5.4</td>
            <td colspan="3">Page No. 1 of 1</td>
        </tr>
        <tr>
            <th>Sr. No.</th>
            <th>Sequence of Activity / Control Method</th>
            <th>Responsibility</th>
            <th>Document reference</th>
            <th>Record reference</th>
        </tr>
        <tr>
            <td>1</td>
            <td>To maintain the list of stores consumable items and other items.</td>
            <td>Store Inch.</td>
            <td>DST01</td>
            <td>--</td>
        </tr>
        <tr>
            <td>2</td>
            <td>To make inward at the time of receipt from the supplier and verify all necessary documents.</td>
            <td>Store Inch.</td>
            <td>--</td>
            <td>FST01</td>
        </tr>
        <tr>
            <td>3</td>
            <td>To verify the supplied items or handover to concerned person for verification.</td>
            <td>Store Inch.</td>
            <td>--</td>
            <td>FQC01</td>
        </tr>
        <tr>
            <td>4</td>
            <td>If found ok, store the item at designated location.</td>
            <td>Store Inch.</td>
            <td>--</td>
            <td>--</td>
        </tr>
        <tr>
            <td>5</td>
            <td>To issue the item as per requirements to concerned department.</td>
            <td>Store Inch.</td>
            <td>--</td>
            <td>FST02</td>
        </tr>
        <tr>
            <td>6</td>
            <td>To maintain the record of issue-receipt and stock.</td>
            <td>Store Inch.</td>
            <td>DST01</td>
            <td>FST03</td>
        </tr>
        <tr>
            <td>7</td>
            <td>All items lying in store are properly identified and stored at designated location. Where as required, appropriate preservation is applied.</td>
            <td>Store Inch.</td>
            <td>--</td>
            <td>--</td>
        </tr>
        <tr>
            <td colspan="5" style="height: 500px; border: none;"></td>
        </tr>
        <tr>
            <td colspan="2">Prepared By MR :</td>
            <td colspan="2">Approved by PARTNER :</td>
            <td colspan="2"></td>
        </tr>

    </table>
    <script>
                document.addEventListener("DOMContentLoaded", () => {
            document.getElementById("downloadPdf").addEventListener("click", () => {
                const { jsPDF } = window.jspdf;
                const pdf = new jsPDF("p", "mm", "a4");

                // Get elements to hide
                const btn = document.getElementById("downloadPdf");
                const logo = document.getElementById("top-logo");

                // Temporarily hide elements
                if (btn) btn.style.display = "none";
                if (logo) logo.style.display = "none";

                html2canvas(document.getElementById("pdf-content")).then(canvas => {
                    const imgData = canvas.toDataURL("image/png");
                    const imgWidth = 190; // A4 width in mm
                    const imgHeight = (canvas.height * imgWidth) / canvas.width;

                    pdf.addImage(imgData, "PNG", 10, 10, imgWidth, imgHeight);
                    pdf.save("PCST01.pdf");

                    // Restore elements after PDF is generated
                    if (btn) btn.style.display = "block";
                    if (logo) logo.style.display = "block";
                });
            });
        });

    </script>
</body>
</html>