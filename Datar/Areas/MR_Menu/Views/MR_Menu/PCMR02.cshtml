        </a>
        <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>
        <!-- Page Title -->
        <h1 class="text-black">PCMR02</h1>
        <!-- Table -->
        <table class="table table-hover border" id="pdf-content">
            <tr>
