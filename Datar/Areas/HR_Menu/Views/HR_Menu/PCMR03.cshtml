<!DOCTYPE html><html lang="en"><head>    <meta charset="UTF-8">    <meta name="viewport" content="width=device-width, initial-scale=1">    <title>PCMR03</title>    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">    <!-- Include jsPDF and html2canvas -->    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>    <style>        @@page {            size: A4;            margin: 20mm;        }        /* Print styles */        @@media print {            body {                background-color: #fff;            }        }        table {            width: 100%;            border-collapse: collapse;            font-family: 'Cambria Math';        }        td {            border: 1px solid black;            padding: 8px;            text-align: left;            vertical-align: middle;        }        th {            text-align: center;            border: 1px solid black;            padding: 8px;            vertical-align: middle;            word-break: break-word;            white-space: normal;            overflow-wrap: break-word;        }        .company-title {            font-size: 20px;            font-weight: bold;            letter-spacing: 1px;            white-space: nowrap;            word-spacing:  5px;        }        .footer-text {            font-size: 1rem;            font-weight: bold;            text-align: left;            padding: 10px;        }        .top-left {            vertical-align: top; /* Align text to the top */            text-align: left; /* Align text to the left */            padding: 5px; /* Optional: Add some padding */        }        .row-height {            height:5vh;
        }    </style></head><body>    <div class="container mt-4 border rounded p-4 bg-light">        <!-- Close Button -->        <a asp-area="MST_Company" id="top-logo" asp-controller="MST_Company" asp-action="CompanyDetail" class="btn btn-link position-absolute top-0 end-0 m-3 text-dark">            <i class="bi bi-x-lg fs-4"></i>        </a>        <button id="downloadPdf" class="btn btn-primary my-3">Download PDF</button>        <!-- Page Title -->        <h1 class="text-black">PCMR01</h1>        <table class="table table-hover border" id="pdf-content">            <tr>                <th colspan="3" class="company-title">BLIZZARD CERAMICA LLP</th>                <th colspan="2" class="company-title">PROCESS CHARTS</th>            </tr>            <tr>                <td colspan="3" class="top-left"><strong>Department:</strong> HR</td>                <td colspan="2" class="top-left"><strong>Doc. No.:</strong> PC HR 01</td>            </tr>            <tr>                <td colspan="3" class="top-left"><strong>Process:</strong> Training</td>                <td colspan="2" class="top-left"><strong>Rev. No. & Date:</strong> 01.08.2024</td>            </tr>            <tr>                <td colspan="3" class="top-left"><strong>ISO 9001:2015 Cl. Ref :</strong> 7.3</td>                <td colspan="2" class="top-left"><strong>Page No.:</strong> 1 of 1</td>            </tr>            <tr>                <th>Sr. No.</th>                <th>Sequence of Activity / Control Method</th>                <th>Responsibility</th>                <th>Document Reference</th>                <th>Record Reference</th>            </tr>            <tr>                <td>1</td>                <td>To maintain the list of employees.</td>                <td>MR</td>                <td>DMR05</td>                <td>--</td>            </tr>            <tr>                <td>2</td>                <td>To define competence level, considering the job requirements.</td>                <td>DIRECTOR</td>                <td>DMR06</td>                <td>Employee Biodata Form</td>            </tr>            <tr>                <td>3</td>                <td>To identify training needs through competence level, internal audit non-conformity, new technology/equipment, route problem, corrective & preventive action etc.</td>                <td>Concern HOD</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr>                <td>4</td>                <td>To make training programme in-house/outside based on the identified needs considering the available resources.</td>                <td>MR</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr>                <td>5</td>                <td>To impart training as per programme.</td>                <td>MR</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr>                <td>6</td>                <td>To evaluate effectiveness of the training imparted.</td>                <td>MR / Concern HOD</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr>                <td>7</td>                <td>To take corrective action, if evaluation is not ok.</td>                <td>MR</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr>                <td>8</td>                <td>To provide the induction training to newly recruited employees.</td>                <td>MR</td>                <td>--</td>                <td>FMR04</td>            </tr>            <tr class="row-height">                <td></td>                <td></td>                <td></td>                <td></td>                <td></td>            </tr>            <tr class="row-height">                <td></td>                <td></td>                <td></td>                <td></td>                <td></td>            </tr>            <tr class="signature-row">                <td colspan="2">Prepared By MR:</td>                <td colspan="2">APPROVED BY PARTNER:</td>                <td></td>            </tr>        </table>    </div>    <script>                document.addEventListener("DOMContentLoaded", () => {            document.getElementById("downloadPdf").addEventListener("click", () => {                const { jsPDF } = window.jspdf;                const pdf = new jsPDF("p", "mm", "a4");                // Get elements to hide                const btn = document.getElementById("downloadPdf");                const logo = document.getElementById("top-logo");                // Temporarily hide elements                if (btn) btn.style.display = "none";                if (logo) logo.style.display = "none";                html2canvas(document.getElementById("pdf-content")).then(canvas => {                    const imgData = canvas.toDataURL("image/png");                    const imgWidth = 190; // A4 width in mm                    const imgHeight = (canvas.height * imgWidth) / canvas.width;                    pdf.addImage(imgData, "PNG", 10, 10, imgWidth, imgHeight);                    pdf.save("PCMR03.pdf");                    // Restore elements after PDF is generated                    if (btn) btn.style.display = "block";                    if (logo) logo.style.display = "block";                });            });        });    </script></body></html>